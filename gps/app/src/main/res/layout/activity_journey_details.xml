<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="-5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrimary"
            android:id="@+id/linear0"
            android:orientation="vertical"
            android:gravity="center"
            android:translationZ="-5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/car"
                android:scaleY="0.6"
                android:scaleX="0.6"
                android:translationZ="-10dp"
                android:padding="-20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journey Details"
                android:textColor="#000000"
                android:layout_marginTop="-40dp"
                android:textSize="35dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/linear0"
            android:id="@+id/linear1"
            android:layout_margin="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@+id/linear1"
                android:id="@+id/profileEmail"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileEmail"
                android:id="@+id/linear2"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_email_black"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journeyEmail"
                    android:text="test@1234@gmail.com"
                    android:textSize="20dp"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance Travelled"
                android:layout_below="@+id/linear2"
                android:id="@+id/profilePhone"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear3"
                android:layout_below="@+id/profilePhone"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location_on_black"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/journeyDistance"
                        android:text="0 km"
                        android:textSize="20dp"
                        android:layout_marginStart="34sp"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of last travel"
                android:layout_below="@+id/linear3"
                android:id="@+id/profileRFID"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear4"
                android:layout_below="@+id/profileRFID"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_date_range_black"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journeyDate"
                    android:text="22-02-2016"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time of last travel"
                android:layout_below="@+id/linear3"
                android:id="@+id/profileRFID1"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear6"
                android:layout_below="@+id/profileRFID"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_access_time_black"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journeyTime"
                    android:text="05:05:05"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest Altitude"
                android:layout_below="@+id/linear3"
                android:id="@+id/profileRFID121"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear5"
                android:layout_below="@+id/profileRFID"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_terrain_black"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journeyAltitude"
                    android:text="0 m"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Highest Speed"
                android:layout_below="@+id/linear3"
                android:id="@+id/profileRFID12"
                android:textSize="17dp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear99"
                android:layout_below="@+id/profileRFID"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_directions_bus_black"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/journeySpeed"
                    android:text="0 km/hr"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/linear5"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>