<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/titleTextGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="GPS LOCATION"
            android:textSize="20sp"
            android:layout_marginTop="40sp"/>

        <Button
            android:id="@+id/locationControllerGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextGPS"
            android:layout_centerHorizontal="true"
            android:text="Get Location"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:id="@+id/longitudeTextGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationControllerGPS"
            android:text="longitude"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/longitudeValueGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationControllerGPS"
            android:layout_toRightOf="@id/longitudeTextGPS"
            android:text="0.0000"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/latitudeTextGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitudeTextGPS"
            android:text="latitude"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/latitudeValueGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitudeValueGPS"
            android:layout_toRightOf="@id/longitudeTextGPS"
            android:text="0.0000"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:id="@+id/speedTextGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitudeValueGPS"
            android:text="Speed"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/speedValueGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitudeValueGPS"
            android:layout_toRightOf="@id/speedTextGPS"
            android:text="0.0000"
            android:textSize="20sp"
            android:layout_marginLeft="48sp"/>
        <TextView
            android:id="@+id/altitudeTextGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speedValueGPS"
            android:text="Altitude"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/altitudeValueGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speedValueGPS"
            android:layout_toRightOf="@id/altitudeTextGPS"
            android:text="0.0000"
            android:textSize="20sp"
            android:layout_marginStart="35sp"/>

        <TextView
            android:id="@+id/CardStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RFID Card not scanned."
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@id/altitudeValueGPS"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Refresh Status"
            android:id="@+id/buttonRefreshStatus"
            android:layout_below="@id/CardStatus"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
